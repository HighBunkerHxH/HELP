
@{
    ViewBag.Title = "Signup";
}

<h2>Signup</h2>
<p>Por Favor introduza as suas credenciais</p>


    <div class="container">
        <hr>
        <div>
            <label for="email"><b>Email</b></label>
            <input type="text" placeholder="Introduza o seu E-Mail" name="email" required>
        </div>
        <div>
            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Introduza a sua Palavra-Passe" name="psw" required>
        </div>
        <div>
            <label for="psw-repeat"><b>Repeat Password</b></label>
            <input type="password" placeholder="Repita a Palavra-Passe" name="psw-repeat" required>
        </div>
        
        <p>Ao Criar a sua conta, deve respeitar os <a href="#" style="color:dodgerblue">Termos e Privacidade</a>.</p>

        <div class="clearfix">
            <button type="button" class="cancelbtn">Cancelar</button>
            <button type="submit" class="signupbtn">Sign Up</button>
        </div>
    </div>


